<div id="loading">
    <h3 style="color:white">Загрузка, пожалуйста подождите...</h3>
</div>
<div id="CreateDialog" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel"><b>Создать новый элемент</b></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="month" class="col-form-label">Месяц и год</label>
                        <input type="month" class="form-control" id="create-month">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="Cancel()">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="CreateItem()">Создать</button>
            </div>
        </div>
    </div>
</div>

<hr />
<br />
<div class="col-3">
    <div class="row">
        <h3>Расчетные периоды</h3>
    </div>
    <div class="row">
        <button type="button" class="btn btn-sm btn-primary" onclick="ShowCreate()">Создать новый период</button>
    </div>
</div>
<br />
<table class="table table-hover table-bordered" id="periodtable">
    <thead>
    <tr>
        <th>
            Название
        </th>
        <th>
            Статус
        </th>
        <th width="200px">
            Действия
        </th>
    </tr>
    </thead>
    <tbody id="periodtablebody">
    </tbody>
</table>
<br />
<hr />
